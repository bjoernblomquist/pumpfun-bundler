{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.json"                // ‚Üê ensure JSON files are picked up
    ],
   "exclude": ["node_modules"]
}
